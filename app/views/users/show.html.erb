<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% if @user.profile != nil %>

<p>
  <strong>First Name:</strong>
  <%= @user.profile.fname %>
</p>

<p>
  <strong>Last Name:</strong>
  <%= @user.profile.lname %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @user.profile.bio %>
</p>

<p>
  <strong>Question:</strong>
  <%= @user.profile.question %>
</p>

<%= image_tag @user.profile.avatar.url(:medium) %>

<% end %>

<br>
<% if logged_in? || logged_in_admin? %>
	<% if logged_in_admin? || @user.id == current_user.id  %>
		<%= link_to 'Edit Account Info', edit_user_path(@user) %> |
		<%= link_to 'Edit Profile Info', edit_profile_path %> |
	<% end %>
<% end %>
<%= link_to 'Back', users_path %>
